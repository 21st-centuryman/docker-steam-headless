set -e

# CATCH TERM SIGNAL:
_term() {
    pkill -P $$
}
for sig in INT QUIT HUP TERM; do
  trap "
    _term
    trap - $sig EXIT
    kill -s $sig "'"$$"' "$sig"
done
trap _term EXIT


# RUN CHILD PROCESS
/usr/bin/dumb-init "${@}" &
proc_pid=$!


# WAIT FOR CHILD PROCESS:
wait "$proc_pid"
